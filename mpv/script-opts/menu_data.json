        {"title": "打乱播放列表", "command": "script-binding playlistmanager/shuffleplaylist"},
        {"title": "播放随机文件", "command": "script-binding playlistmanager/playlist-next-random"}
        ]
    },
    {
        "title": "播放速度",
        "items": [
            {"title": "加速0.1", "command": "add speed +0.1"},
            {"title": "减速0.1", "command": "add speed -0.1"},
            {"title": "重置为1.0", "command": "set speed 1.0"}
        ]
    },
    {
        "title": "窗口控制",
        "items": [
            {"title": "切换无边框", "command": "cycle border"},
