            {"title": "静音切换", "command": "cycle mute"}
        ]
    },
    {
        "title": "播放控制",
        "items": [
            {"title": "暂停/播放", "command": "cycle pause"},
            {"title": "下一帧", "command": "frame-step"},
            {"title": "上一帧", "command": "frame-back-step"},
            {"title": "后退5秒", "command": "seek -5 exact"},
            {"title": "前进5秒", "command": "seek +5 exact"},
            {"title": "后退60秒", "command": "seek -60"},
            {"title": "前进60秒", "command": "seek +60"}
