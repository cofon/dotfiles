        {"title": "随机播放", "command": "playlist-shuffle; show-text \"playlist-shuffle\""},
        {"title": "单文件循环", "command": "cycle-values loop-file inf no"},
        {"title": "播放列表循环", "command": "cycle-values loop-playlist inf no"},
        {"title": "保存播放列表", "command": "script-binding playlistmanager/saveplaylist"},
        {"title": "选择播放列表", "command": "script-binding playlistmanager/selectplaylist"},
