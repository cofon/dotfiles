            {"title": "视频缩放-0.002", "command": "add video-zoom -0.002"},
            {"title": "填充视频黑边", "command": "vf toggle pad=aspect=${display-width}/${display-height}:x=-1:y=-1"},
            {"title": "帧插值切换", "command": "cycle interpolation"}
        ]
    },
    {
        "title": "截图功能",
        "items": [
            {"title": "截图(带字幕)", "command": "show-text \"请耐心等待截图完成\" 60000; screenshot"},
