    },
    {
        "title": "播放列表",
        "items": [
        {"title": "显示播放列表", "command": "script-binding playlistmanager/showplaylist"},
        {"title": "播放列表菜单", "command": "script-binding playlistmanager/openmenu"},
        {"title": "上一个", "command": "playlist-prev"},
