            {"title": "减少字幕延迟0.05", "command": "add sub-delay -0.05"},
            {"title": "增加字幕延迟0.05", "command": "add sub-delay +0.05"}
        ]
    },
    {
        "title": "音频控制",
        "items":[
            {"title": "减少音频延迟0.2", "command": "add audio-delay -0.2"},
            {"title": "增加音频延迟0.2", "command": "add audio-delay +0.2"}
        ]
    },
    {
        "title": "视频控制",
        "items": [
            {"title": "旋转视频", "command": "cycle-values video-rotate 90 180 270 0"},
